<?xml version="1.0"?>
<robot name="mobile_base">

  <!-- Materials -->
  <material name="base_body">
    <color rgba="0.2 0.2 0.8 1.0"/>
  </material>

  <material name="wheel">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>

  <material name="caster">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <!-- Base Chassis -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
      <material name="base_body"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.04" ixy="0.0" ixz="0.0"
               iyy="0.08" iyz="0.0" izz="0.10"/>
    </inertial>
  </link>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.05"/>
      </geometry>
      <material name="wheel"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.05"/>
      </geometry>
      <material name="wheel"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>

  <!-- Front Caster -->
  <link name="front_caster">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="caster"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0"
               iyy="0.0002" iyz="0.0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Rear Caster -->
  <link name="rear_caster">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="caster"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0"
               iyy="0.0002" iyz="0.0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Left Wheel Joint (continuous rotation) -->
  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0.1 0.175 -0.025" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Right Wheel Joint (continuous rotation) -->
  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0.1 -0.175 -0.025" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Front Caster Joint (fixed) -->
  <joint name="front_caster_joint" type="fixed">
    <origin xyz="0.15 0.0 -0.075" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="front_caster"/>
  </joint>

  <!-- Rear Caster Joint (fixed) -->
  <joint name="rear_caster_joint" type="fixed">
    <origin xyz="-0.15 0.0 -0.075" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="rear_caster"/>
  </joint>

</robot>
