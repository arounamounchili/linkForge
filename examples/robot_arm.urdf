<?xml version="1.0"?>
<!--
  Simple 4-DOF Robot Arm
  Industrial-style manipulator with properly positioned links and joints

  Structure:
  - base_link: Fixed base (cylinder)
  - shoulder_link: Vertical shoulder piece (box)
  - upper_arm_link: Upper arm segment (box)
  - forearm_link: Forearm segment (box)
  - wrist_link: End effector mount (box)
-->
<robot name="robot_arm">

  <!-- Base (fixed to ground) -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.10" length="0.10"/>
      </geometry>
      <material name="base_material">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.10" length="0.10"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0146" ixy="0.0" ixz="0.0" iyy="0.0146" iyz="0.0" izz="0.0250"/>
    </inertial>
  </link>

  <!-- Shoulder (rotates around Z - base rotation) -->
  <link name="shoulder_link">
    <visual>
      <geometry>
        <box size="0.08 0.08 0.25"/>
      </geometry>
      <material name="arm_material">
        <color rgba="0.8 0.4 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.08 0.25"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <inertia ixx="0.0115" ixy="0.0" ixz="0.0" iyy="0.0115" iyz="0.0" izz="0.0021"/>
    </inertial>
  </link>

  <joint name="base_to_shoulder" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="150.0" velocity="1.5"/>
    <dynamics damping="1.0" friction="0.5"/>
  </joint>

  <!-- Upper Arm (rotates around Y - shoulder pitch) -->
  <link name="upper_arm_link">
    <visual>
      <geometry>
        <box size="0.06 0.06 0.35"/>
      </geometry>
      <material name="arm_material">
        <color rgba="0.8 0.4 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.06 0.06 0.35"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <origin xyz="0 0 0.175" rpy="0 0 0"/>
      <inertia ixx="0.0159" ixy="0.0" ixz="0.0" iyy="0.0159" iyz="0.0" izz="0.0009"/>
    </inertial>
  </link>

  <joint name="shoulder_to_upper_arm" type="revolute">
    <parent link="shoulder_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57080" upper="1.57080" effort="120.0" velocity="1.5"/>
    <dynamics damping="0.8" friction="0.4"/>
  </joint>

  <!-- Forearm (rotates around Y - elbow pitch) -->
  <link name="forearm_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.30"/>
      </geometry>
      <material name="arm_material">
        <color rgba="0.8 0.4 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.30"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <inertia ixx="0.0076" ixy="0.0" ixz="0.0" iyy="0.0076" iyz="0.0" izz="0.0004"/>
    </inertial>
  </link>

  <joint name="upper_arm_to_forearm" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 0.35" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.35619" upper="2.35619" effort="80.0" velocity="2.0"/>
    <dynamics damping="0.6" friction="0.3"/>
  </joint>

  <!-- Wrist (rotates around Z - wrist roll) -->
  <link name="wrist_link">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.12"/>
      </geometry>
      <material name="wrist_material">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.12"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <inertia ixx="0.0006" ixy="0.0" ixz="0.0" iyy="0.0006" iyz="0.0" izz="0.0002"/>
    </inertial>
  </link>

  <joint name="forearm_to_wrist" type="revolute">
    <parent link="forearm_link"/>
    <child link="wrist_link"/>
    <origin xyz="0 0 0.30" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="40.0" velocity="2.5"/>
    <dynamics damping="0.4" friction="0.2"/>
  </joint>

</robot>
