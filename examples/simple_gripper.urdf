<?xml version="1.0"?>
<robot name="simple_gripper">

  <!-- Materials -->
  <material name="gripper_body">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <material name="finger">
    <color rgba="0.6 0.6 0.6 1.0"/>
  </material>

  <!-- Base/Palm -->
  <link name="palm">
    <visual>
      <geometry>
        <box size="0.08 0.05 0.03"/>
      </geometry>
      <material name="gripper_body"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.05 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.00015" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Left Finger -->
  <link name="left_finger">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.02 0.05"/>
      </geometry>
      <material name="finger"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.02 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00002" ixy="0.0" ixz="0.0"
               iyy="0.00002" iyz="0.0" izz="0.000005"/>
    </inertial>
  </link>

  <!-- Right Finger -->
  <link name="right_finger">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.02 0.05"/>
      </geometry>
      <material name="finger"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.02 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00002" ixy="0.0" ixz="0.0"
               iyy="0.00002" iyz="0.0" izz="0.000005"/>
    </inertial>
  </link>

  <!-- Left Finger Joint (prismatic) -->
  <joint name="left_finger_joint" type="prismatic">
    <origin xyz="0.04 0.0 0.015" rpy="0 0 0"/>
    <parent link="palm"/>
    <child link="left_finger"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="0.03" effort="10.0" velocity="0.5"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- Right Finger Joint (prismatic, mimic left) -->
  <joint name="right_finger_joint" type="prismatic">
    <origin xyz="-0.04 0.0 0.015" rpy="0 0 0"/>
    <parent link="palm"/>
    <child link="right_finger"/>
    <axis xyz="-1 0 0"/>
    <limit lower="0.0" upper="0.03" effort="10.0" velocity="0.5"/>
    <dynamics damping="0.5" friction="0.1"/>
    <mimic joint="left_finger_joint" multiplier="1.0" offset="0.0"/>
  </joint>

</robot>
